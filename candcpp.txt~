c standard library in c++ #include<cstdio>

Storage Class :: auto , static , extern , register

turnary condition :: int a = b? 8:9 ; //if b is true then a=8 or if b is false then a=9

Constant variable :: in C > #define a 5
					 in C++ > const int a = 5 ;

switch :: int idiot = 1;
		  switch(idiot)
		  {
		  	case 1:puts("dumb ass");break;
		  	case 2:puts("go to hell");break;
		  	default:puts("hiren");break;
		  }

Pointer :: int x = 1;
		   int *y //pointer declaration
		   y = &x // memory adrs of x assined to y
		   
String :: char[]={'s','t','r','i','n','g',0}; // 0 terminate the string ; it is also called Null
		  char[]="string"; //both are equivalent


Data Types ::
	Int Type >>
			char (signed char)      unsigned char
			short int                    unsigned short int
			int							 unsigned int
			long int						 unsigned long int
			long long int 				 unsigned long long int
			
	String >>
	   char s[] = "asdasdas";  //common in c/c++
	   string xy = "asdad";   //c++ advanced level string
	   
	  Qualifier >>
	  	Storage Class            Type Qualifier
	  	static							const
